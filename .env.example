# Docker Compose Environment Variables
# Скопируйте этот файл в .env и настройте значения для вашего окружения

# ============================================
# Порты для локальной разработки (development)
# ============================================
# Используются, если не указаны другие значения

# PostgreSQL порт (по умолчанию: 55432 для локальной разработки)
# В production обычно: 5432
POSTGRES_PORT=55432

# Redis порт (по умолчанию: 6479 для локальной разработки)
# В production обычно: 6379
REDIS_PORT=6479

# MongoDB порт (по умолчанию: 27017)
# В production обычно: 27017
MONGODB_PORT=27017

# Rails приложение порт (по умолчанию: 3000)
# В production обычно: 3000
RAILS_PORT=3000

# ============================================
# Другие переменные окружения
# ============================================

# JWT Secret Key (обязательно измените в production!)
JWT_SECRET=change_me_to_secret_key_please

# Redis пароль (опционально)
# REDIS_PASSWORD=

# Максимальное количество потоков Rails
RAILS_MAX_THREADS=5
