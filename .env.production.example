# Docker Compose Environment Variables для Production
# Используйте эти значения для продакшн окружения

# ============================================
# Порты для Production
# ============================================

# PostgreSQL порт (стандартный порт PostgreSQL)
POSTGRES_PORT=5432

# Redis порт (стандартный порт Redis)
REDIS_PORT=6379

# MongoDB порт (стандартный порт MongoDB)
MONGODB_PORT=27017

# Rails приложение порт
RAILS_PORT=3000

# ============================================
# Другие переменные окружения для Production
# ============================================

# JWT Secret Key (ОБЯЗАТЕЛЬНО измените на безопасный ключ!)
JWT_SECRET=your_production_secret_key_here

# Redis пароль (рекомендуется установить)
REDIS_PASSWORD=your_redis_password_here

# Максимальное количество потоков Rails
RAILS_MAX_THREADS=10
